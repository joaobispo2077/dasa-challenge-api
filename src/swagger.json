{
  "openapi": "3.0.0",
  "info": {
    "title": "Documentation from DASA Challenge API",
    "description": "This docs is about exams and laboratories",
    "version": "1.0.0",
    "contact": {
      "email": "joaobispo2077@gmail.com"
    }
  },
  "paths": {
    "/laboratories/{id}/exams": {
      "post": {
        "tags": ["Laboratories"],
        "summary": "Add relationship between laboratory and exam",
        "description": "Add relationship between laboratory and exam",
        "operationId": "addExamToLaboratory",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Laboratory id"
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "examId": {
                    "type": "string"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/laboratories": {
      "post": {
        "tags": ["Laboratories"],
        "summary": "Create a laboratory",
        "description": "Create a new laboratory",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/LaboratoryInput"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created"
          }
        }
      },
      "get": {
        "tags": ["Laboratories"],
        "summary": "Get all laboratories ",
        "description": "Get all laboratories active",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "array": {
                    "items": {
                      "$ref": "#/components/LaboratoryOutput"
                    }
                  }
                }
              }
            }
          }
        }
      },
      "delete": {
        "tags": ["Laboratories"],
        "summary": "Delete one laboratory by id",
        "description": "Delete one laboratory by id",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Laboratory id",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      },
      "patch": {
        "tags": ["Laboratories"],
        "summary": "Update one laboratory by id",
        "description": "Update one laboratory by id",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Laboratory id",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/LaboratoryUpdateInput"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/LaboratoryOutput"
                }
              }
            }
          }
        }
      }
    },
    "/exams": {
      "post": {
        "tags": ["Exams"],
        "summary": "Create an exam",
        "description": "Create a new exam",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/ExamInput"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created"
          }
        }
      },
      "get": {
        "tags": ["Exams"],
        "summary": "Get all exams ",
        "description": "Get all exams active",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "array": {
                    "items": {
                      "$ref": "#/components/ExamOutput"
                    }
                  }
                }
              }
            }
          }
        }
      },
      "delete": {
        "tags": ["Exams"],
        "summary": "Delete one exam by id",
        "description": "Delete one exam by id",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Exam id",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      },
      "patch": {
        "tags": ["Exams"],
        "summary": "Update one exam by id",
        "description": "Update one exam by id",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Exam id",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/ExamUpdateInput"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/ExamOutput"
                }
              }
            }
          }
        }
      }
    },
    "/ready": {
      "get": {
        "tags": ["System"],
        "summary": "Returns message if system is ready",
        "description": "Returns is ready message",
        "operationId": "getReady",
        "responses": {
          "200": {
            "description": "Successful",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/version": {
      "get": {
        "tags": ["System"],
        "summary": "Returns version of the system",
        "description": "Returns version of the system",
        "operationId": "getVersion",
        "responses": {
          "200": {
            "description": "Successful",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "name": {
                      "type": "string"
                    },
                    "author": {
                      "type": "string"
                    },
                    "version": {
                      "type": "string"
                    },
                    "description": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
