{
  "openapi": "3.0.0",
  "info": {
    "title": "Documentação da API de laboratórios e exames",
    "description": "Documentação do Desafio de API da DASA",
    "version": "1.0.0",
    "contact": {
      "email": "joaobispo2077@gmail.com"
    }
  },
  "paths": {
    "/laboratories": {
      "post": {
        "tags": ["Laboratories"],
        "summary": "Create a laboratory",
        "description": "Create a new laboratory",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/LaboratoryInput"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created"
          }
        }
      },
      "get": {
        "tags": ["Laboratories"],
        "summary": "Get all laboratories ",
        "description": "Get all laboratories active",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "array": {
                    "items": {
                      "$ref": "#/components/LaboratoryOutput"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/exams": {
      "post": {
        "tags": ["Exams"],
        "summary": "Create an exam",
        "description": "Create a new exam",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/ExamInput"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created"
          }
        }
      },
      "get": {
        "tags": ["Exams"],
        "summary": "Get all exams ",
        "description": "Get all exams active",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "array": {
                    "items": {
                      "$ref": "#/components/ExamOutput"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/ready": {
      "get": {
        "tags": ["System"],
        "summary": "Returns message if system is ready",
        "description": "Returns is ready message",
        "operationId": "getReady",
        "responses": {
          "200": {
            "description": "Successful",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/version": {
      "get": {
        "tags": ["System"],
        "summary": "Returns version of the system",
        "description": "Returns version of the system",
        "operationId": "getVersion",
        "responses": {
          "200": {
            "description": "Successful",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "name": {
                      "type": "string"
                    },
                    "author": {
                      "type": "string"
                    },
                    "version": {
                      "type": "string"
                    },
                    "description": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "LaboratoryInput": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "address": {
          "type": "string"
        }
      },
      "example": {
        "name": "Laboratório Paulista",
        "address": "Rua Paulista, 100",
        "status": "ativo"
      }
    },
    "LaboratoryOutput": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "address": {
          "type": "string"
        },
        "status": {
          "type": "string"
        }
      },
      "example": {
        "id": "9f0838a3-14f0-4677-9ffe-2332baed5dfa",
        "name": "Laboratório Paulista",
        "address": "Rua Paulista, 100",
        "status": "ativo"
      }
    },
    "ExamInput": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "type": {
          "type": "string"
        }
      },
      "example": {
        "id": "9f0838a3-14f0-4677-9ffe-2332baed5dfa",
        "name": "Exame de sangue",
        "type": "analise clinica"
      }
    },
    "ExamOutput": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "type": {
          "type": "string"
        },
        "status": {
          "type": "string"
        }
      },
      "example": {
        "id": "32c1bbc9-d173-42e7-8bae-e992c2a7b945",
        "name": "Raio X",
        "type": "imagem",
        "status": "ativo"
      }
    }
  }
}
