        },
        "address": {
          "type": "string"
        }
      },
      "example": {
        "name": "Laboratório Paulista",
        "address": "Rua Paulista, 100",
        "status": "ativo"
      }
    },
    "LaboratoryUpdateInput": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "address": {
          "type": "string"
        },
        "status": {
          "type": "string"
        }
      },
      "example": {
        "name": "Laboratório Paulista",
        "address": "Rua Paulista, 300",
        "status": "inativo"
