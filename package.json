{
  "name": "dasa-challenge-api",
  "version": "1.0.0",
  "description": "Solução para teste técnico da DASA para Desenvolvedor Full Stack",
  "main": "index.js",
  "repository": "https://github.com/joaobispo2077/dasa-challenge-api.git",
  "author": "João Bispo <joaobispo2077@gmail.com>",
  "license": "MIT",
  "keywords": [
    "nodejs",
    "api",
    "dasa",
    "challenge",
    "typescript",
    "node",
    "express",
    "docker",
    "docker-compose",
    "swagger",
    "postgresql",
    "heroku"
  ],
  "engines": {
    "node": "16.x"
  },
  "scripts": {
    "start": "node dist/src/main.js",
    "build": "tsc -p tsconfig-build.json",
    "dev": "ts-node-dev --exit-child --inspect --transpile-only --ignore-watch node_modules --respawn src/main.ts",
    "commit:lint": "lint-staged",
    "lint": "yarn lint:check && yarn style:check ",
    "lint:check": "eslint ./src ./test --ext .ts",
    "lint:fix": "eslint ./src ./test --ext .ts --fix",
    "style:check": "prettier --check ./src/**/*.ts ./test/**/*.ts",
    "style:fix": "prettier --write src/**/*.ts test/**/*.ts",
    "test": "jest --passWithNoTests --silent --noStackTrace --runInBand",
    "test:verbose": "jest --passWithNoTests --runInBand",
    "test:staged": "npm test -- --findRelatedTests",
    "test:ci": "npm test -- --coverage",
    "prod:setup:database": "yarn prod:db:generate && yarn prod:db:migrate",
    "prod:db:generate": "npx prisma generate --schema=src/database/prisma/schema.prisma",
    "prod:db:migrate": "npx prisma migrate deploy --schema=src/database/prisma/schema.prisma",
    "db:generate": "prisma generate --schema=src/database/prisma/schema.prisma",
    "db:migrate": "npx prisma migrate dev --schema=src/database/prisma/schema.prisma",
    "db:studio": "prisma studio --schema=src/database/prisma/schema.prisma"
  },
  "dependencies": {
    "@overnightjs/core": "^1.7.6",
    "@prisma/client": "^3.8.1",
    "cors": "^2.8.5",
    "express": "^4.17.2",
    "express-pino-logger": "^7.0.0",
    "module-alias": "^2.2.2",
    "pino": "^7.6.5",
    "swagger-ui-express": "^4.3.0",
    "yup": "^0.32.11"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.1.0",
    "@commitlint/config-conventional": "^16.0.0",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/express-pino-logger": "^4.0.3",
    "@types/jest": "^27.4.0",
    "@types/module-alias": "^2.0.1",
    "@types/node": "^17.0.13",
    "@types/swagger-ui-express": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^5.10.1",
    "@typescript-eslint/parser": "^5.10.1",
    "eslint": "^8.8.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "jest": "^27.4.7",
    "lint-staged": "^12.3.2",
    "prettier": "^2.5.1",
    "prisma": "^3.8.1",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.4.0",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.5.5"
  }
}
